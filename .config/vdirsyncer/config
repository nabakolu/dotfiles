[general]
# A folder where vdirsyncer can store some metadata about each pair.
status_path = "~/.vdirsyncer/status/"


[pair contacts]
a = "contacts_local"
b = "contacts_remote"
collections = ["from a", "from b"]
metadata = ["displayname"]

[storage contacts_local]
type = "filesystem"
path = "~/contacts/"
fileext = ".vcf"

[storage contacts_remote]
type = "carddav"
url = "https://caldav.nabakolu.xyz/lukas/contacts/"
username = "lukas"
password.fetch = ["command", "secret-tool", "lookup", "Title", "Radicale"]

[pair caldav_personal]
a = "caldav_personal_local"
b = "caldav_personal_remote"
collections = ["from a", "from b"]
metadata = ["displayname", "color"]

[storage caldav_personal_local]
type = "filesystem"
path = "~/calendars/caldav/"
fileext = ".ics"

[storage caldav_personal_remote]
type = "caldav"
url = "https://caldav.nabakolu.xyz/lukas/personal/"
username = "lukas"
password.fetch = ["command", "secret-tool", "lookup", "Title", "Radicale"]

[pair feiertage]
a = "feiertage_local"
b = "feiertage_remote"
collections = null

[storage feiertage_local]
type = "filesystem"
path = "~/calendars/webcal/feiertage/"
fileext = ".ics"

[storage feiertage_remote]
type = "http"
url = "https://i.cal.to/ical/64/baden-wuerttemberg/feiertage/a1596647.7c2522ab-3d33aa19.ics#Feiertage+-+Baden-W%C3%BCrttemberg"

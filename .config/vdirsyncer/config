[storage calendar_remote]
type = "caldav"
url = "https://caldav.nabakolu.xyz/lukas/personal/"
username = "lukas"
password.fetch = ["command", "secret-tool", "lookup", "Title", "Radicale"]

[pair league]
a = "league_remote"
b = "league_local"
collections = null

[storage league_remote]

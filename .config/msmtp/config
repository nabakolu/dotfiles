# set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

# Mailo
account mailo
host mail.mailo.com
port 465
from lnabakowski@mailo.com
user lnabakowski@mailo.com
passwordeval "secret-tool lookup Title Mailo"
tls_starttls off

# Gmail
account gmail
host smtp.gmail.com
port 465
from lnabakowski@gmail.com
user lnabakowski
passwordeval "secret-tool lookup Title Google"
tls_starttls off

[calendars]

[[caldav]]
path = ~/calendars/caldav/*
type = discover
color = light green

[[webcal]]
path = ~/calendars/webcal/*
type = discover

[[birthdays]]
path = ~/contacts/contacts
type = birthdays
color = light magenta

[locale]
timeformat = %H:%M
dateformat = %d/%m/%Y
longdateformat = %d/%m/%Y
datetimeformat = %d/%m/%Y %H:%M
longdatetimeformat = %d/%m/%Y %H:%M
unicode_symbols = False

[default]
default_calendar = personal
highlight_event_days = true
timedelta = 1d

[view]
frame = width
dynamic_days = false

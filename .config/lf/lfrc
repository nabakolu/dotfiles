map q quit
map <enter> open

map rm delete
map P delete
map rn rename

map <c-c> copy
map <c-x> cut
map <c-v> paste

map v img

map md mkdir
map mf mkfile

map f short_find
map <c-f> full_find

map S shell-wait

# open specific
map ol open_less
map om open_mocp
map of open_firefox
map os open_sxiv
map og open_gimp
map ow open_pywal

# Settings
map . set hidden!

# Archive Mappings
map az zip
map at tar
map ag targz
map ab tarbz2
map au unarchive

# Movement
map gc cd ~/.config
map gm cd /media/LUKAS/Music
map gb cd /usr/local/bin
map gg cd /
map ge cd /etc
map gM cd /media

